<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/styles.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="/typed.js"></script>
    <script src="/main.js"></script>
  </head>
  <body>
    <div class="jumbotron">
      <h1>
      <main>
      <span class="element" id="landing" style="white-space:pre"></span><br><br>
    </main></h1>
      <div id="new-task" class="container">
        <a href="/tasks/new"><button type="button" class="btn btn-info btn-lg btn-block">New Task</button></a>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <p class="tasks">TASKS</p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <% @tasks.each do |task| %>
            <div class="hobby"><h3><a href="/tasks/<%= task.id %>"><%= task.title %></a></h3></div>
          <% end %>
        </div>
      </div>
  </body>
</html>
