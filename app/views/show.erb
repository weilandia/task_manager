    <script src="/typed.js"></script>
    <script src="/main.js"></script>
  </head>
  <body>
    <div class="jumbotron">
      <h1><%= @task.title %></h1>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <p class="tasks"><%= @task.description %></p>
